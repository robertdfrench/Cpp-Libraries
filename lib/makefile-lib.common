# Double directoy up because this path is expanded when it is included (which is a directory down):
include $(abspath ../../makefile.common)

OBJS = $(SRC:.cpp=.o)

default: $(LIB)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) $(INCLUDES) -c $< -o $@

$(LIB): $(OBJS)
	$(AR) $(ARFLAGS) $(LIB) $(OBJS)
	@cp $(LIB) $(BIN_DIR)

clean:
	$(RM) $(OBJS) $(LIB) $(GLOBAL_REMOVES)
